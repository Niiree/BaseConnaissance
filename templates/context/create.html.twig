{% extends 'base.html.twig' %}
{% block title %}Création contexte{% endblock %}
{% block body %}
    {% include 'navbar.html.twig'%}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="content">
        <div class="row">
            <div class="col-sm-2" id="one">
                <div class="d-flex custom" id="wrapper">
                    <div class="bg-light border-right" id="sidebar-wrapper">
                        <div class="list-group list-group-flush">
                            <a href= "{{ path('users_index') }}" class="list-group-item list-group-item-action bg-light">Utilisateur</a>
                            <a href="{{ path('context_create') }}" class="list-group-item list-group-item-action bg-light">Contexte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="example-wrapper">
            <h2 class="text-center pt-xl-5 pb-4">Administration des contextes</h2>
            {% for context in contexts %}
                {{ context.id }} -
                {{ context.name }}
                <br>
            {% endfor %}
            {{ form(formContext) }}
            <a href="{{ path('users_index') }}">Revenir à la liste</a>
        </div>
    </div>
{% endblock %}
